.disabled
	cursor default
	opacity .5
	pointer-events none

.hidden
	display none !important

.hide
	display none

.show
	display block !important

.invisible
	visibility hidden

.tr
	transition all .4s

.tr--bg
	transition background .4s

.tr--color
	transition color .4s

.tr--fill
	transition fill .4s

.cp
	cp()

.bg-full
	bg-full()

.h100
	height: 100%

.overflow--hidden
	overflow: hidden

.overflow--auto
	overflow: auto

.overflow--scroll
	overflow: scroll

.willHide
	opacity: 0
	left -9999px
	top 0
	visibility: hidden
	position absolute
	transform translateX(10px)
	transition opacity 1.2s, transform .8s
	&.active
		transform translateX(0px)
		visibility: visible
		opacity: 1
		left initial
		position: static

// fix iphone input bug
@media screen and (-webkit-min-device-pixel-ratio:0)
	select:focus,
	textarea:focus,
	input:focus
		font-size: 16px;
		background: #eee;

@media screen and (-webkit-min-device-pixel-ratio:0)
	select,
	textarea,
	input
		font-size: 16px!important
// fix iphone input bug === end






